#! /bin/bash
SESSION="tiy"
if ! (tmux has-session -t "$SESSION" >/dev/null 2>&1); then

  TMUX_PREV=$TMUX
  TMUX=

  tmux new-session -s "$SESSION" -n notes -c "$HOME/Code/tiy-greenville-frontend-2016-feb/notes/" -d
  tmux new-window -n assignments -t "$SESSION" -c "$HOME/Code/tiy-greenville-frontend-2016-feb/assignments/"
  tmux new-window -n lessons -t "$SESSION" -c "$HOME/Dropbox/Information/Academy/lessons/"
  tmux new-window -n assets -t "$SESSION" -c "$HOME/Code/tiy-greenville-frontend-2016-feb/assets/"
  tmux new-window -n prev -t "$SESSION" -c "$HOME/Code/theironyard/prev"
  tmux select-window -t "$SESSION":1

  TMUX=$TMUX_PREV

  tat "$SESSION"
else
  tat "$SESSION"
fi
