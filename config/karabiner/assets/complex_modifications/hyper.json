{
  "title": "Hyper",
  "rules": [
    {
      "description": "Change Home to Command + Ctrl + Option",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "home",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control",
              "modifiers": [
                "left_option",
                "left_command"
              ]
            }
          ]
        }
      ]
    }
  ]
}
