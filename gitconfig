[core]
  trustctime = false
  pager = less -FRSX
  editor = vim -u NONE
[alias]
  b = branch
  st = status
  ci = commit
  co = checkout
  di = diff
  dc = diff --cached
  dt = difftool
  dtc = difftool --cached
[branch]
  autoSetupRebase = always
[color]
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[credential]
  helper = osxkeychain
[diff]
  tool = Kaleidoscope
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
  prompt = false
[fetch]
  prune = true
[format]
  pretty =-'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
[grep]
  lineNumber = true
[init]
  templatedir = ~/.config/git/template
[log]
  abbrevCommit = true
[merge]
  tool = Kaleidoscope
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
[mergetool]
  prompt = false
[push]
  default = simple
[rebase]
  autosquash = true
[user]
  name = Jacob Smith
  email = jacob@jacobsmith.io
[github]
  user = jacobthemyth
