[user]
  name = Jacob Smith
  email = jacob@jacobsmith.io
[apply]
  whitespace = nowarn
[branch]
  autosetupmerge = always
[color]
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  excludesfile = ~/.gitignore_global
  quotepath = false
  trustctime = false
  pager = less -FRSX
  editor = vim -u NONE
[alias]
  b = branch
  st = status
  ci = commit
  ca = commit -a -m
  co = checkout
  di = diff
  dc = diff --cached
  dt = difftool
  dtc = difftool --cached
  ds = diff --stat=160,120
  dh1 = diff HEAD~1
  save = "!f() { git add -A && git commit -m \"`date`\"; }; f"
  ctags = !.git/hooks/ctags
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  type = cat-file -t
  dump = cat-file -p
[merge]
  tool = Kaleidoscope
[format]
  numbered = auto
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[diff]
  tool = Kaleidoscope
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
  prompt = false
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
[mergetool]
  prompt = false
[github]
  user = jacobthemyth
[grep]
  lineNumber = true
[push]
  default = simple
[init]
  templatedir = ~/.git_template
[fetch]
  prune = true
[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
[rebase]
  autosquash = true
[commit]
  template = ~/.gitmessage
