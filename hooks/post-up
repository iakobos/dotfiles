#!/bin/sh

main () {
  init_vundle
  [[ -f ~/.terminal/xterm-256color-italic.terminfo ]] && tic ~/.terminal/xterm-256color-italic.terminfo
  [[ -f ~/.terminal/screen-256color-italic.terminfo ]] && tic ~/.terminal/screen-256color-italic.terminfo
}

init_vundle () {
  if [ ! -e $HOME/.vim/bundle/Vundle.vim ]; then
    echo "Cloning Vundle.vim"
    git clone https://github.com/gmarik/Vundle.vim.git $HOME/.vim/bundle/Vundle.vim
  fi
  vim +PluginClean +PluginInstall +qall
}

main
